<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:paddingStart="16dp"
                android:text="输入文字" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/tv_clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:background="@drawable/bg_clickable_circle"
                android:clickable="true"
                android:padding="8dp"
                app:srcCompat="@drawable/ic_clear_black_24px" />

        </RelativeLayout>

        <EditText
            android:id="@+id/tv_point"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="top"
            android:maxHeight="100dp"
            android:minHeight="100dp"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            tools:text="Make" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/phonetic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:paddingLeft="16dp"
                android:text="hɛˈlo, hə-"
                android:visibility="gone" />

            <Button
                android:id="@+id/bt_translate"
                style="@style/BlueButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="16dp"
                android:text="翻译" />
        </RelativeLayout>

    </LinearLayout>

    <FrameLayout
        android:animateLayoutChanges="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#e2e2e2"
        android:paddingTop="4dp">

        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/error_view"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/img_cloud_off"
                android:layout_centerVertical="true"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentStart="true"
                app:srcCompat="@drawable/ic_cloud_off_black_48px" />

            <TextView
                android:padding="12dp"
                android:id="@+id/tv_error_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/img_cloud_off"
                android:text="ERROR"
                android:textAppearance="?android:textAppearanceLarge" />
            <TextView
                android:layout_marginStart="48dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:layout_below="@id/tv_error_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="网络被劫持，说出来你可能不信。是外星人先动的手" />
        </RelativeLayout>


        <!--<android.support.v7.widget.RecyclerView-->
            <!--android:id="@+id/history_rec_view"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:visibility="gone" />-->

        <io.github.kolacbb.translate.view.DictionaryRecycleView
            android:id="@+id/history_rec_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:visibility="gone"
            />

        <android.support.v4.widget.ContentLoadingProgressBar
            android:id="@+id/progress_bar"
            style="?android:progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal" />

        <ScrollView
            android:id="@+id/translate_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="#fafafa"

                    card_view:cardCornerRadius="4dp">
                    <TextView
                        android:padding="16dp"
                        android:id="@+id/translation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingEnd="56dp"
                        android:text="TEXT"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:textColor="#ff000000" />

                    <ImageButton
                        android:id="@+id/add_book"
                        android:padding="16dp"
                        android:layout_gravity="end"
                        android:src="@drawable/ic_star_border_black_24px"
                        android:background="@drawable/bg_clickable_circle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/dictionary_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:background="#fafafa"
                    android:padding="16dp"
                    card_view:cardCornerRadius="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="8dp"
                            android:text="DICTIONARY"
                            android:textColor="#ff000000" />

                        <TextView
                            android:id="@+id/basic"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingEnd="16dp"
                            android:paddingStart="16dp"
                            android:text="n.动词 开心 \n v.名词 更开心" />
                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>
        </ScrollView>
    </FrameLayout>
</LinearLayout>
